<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="smoke" verbose="1">
    <groups>
        <run>
            <include name="smoke"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.tutorialsninja.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Smoke Test">
        <classes>
            <class name="com.tutorialsninja.testsuite.DeskTopPageTest"></class>
            <class name="com.tutorialsninja.testsuite.HomePageTest"></class>
            <class name="com.tutorialsninja.testsuite.LaptopAndNotebooksTest"></class>
            <class name="com.tutorialsninja.testsuite.RegisterTest"></class>

        </classes>
    </test>
</suite>